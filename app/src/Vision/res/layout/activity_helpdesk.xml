<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vision_bg"
    android:clickable="true"
    android:orientation="vertical">

    <include
        android:id="@+id/fragment_toolbar"
        layout="@layout/include_toolbar_fargment" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_invite_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp20"
                android:background="@drawable/bg_login_transparent"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp7">


                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_invite_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp5"
                        android:gravity="center"
                        android:text="Enter your details here"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp22"
                        app:custom_font="?attr/app_font_medium" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginEnd="@dimen/dp15"
                    android:orientation="vertical">

                    <com.customviews.TypefaceTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp5"
                        android:text="Email address *"
                        android:textColor="@color/colorWhite"
                        android:textSize="?attr/app_text_size_normal"
                        app:custom_font="@string/app_font_regular" />


                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/et_height"
                        android:background="@drawable/et_vistion"
                        android:focusableInTouchMode="true"
                        android:hint="Update email address"
                        android:paddingStart="@dimen/dp8"
                        android:paddingTop="@dimen/dp10"
                        android:paddingEnd="@dimen/dp8"
                        android:paddingBottom="@dimen/dp10"
                        android:singleLine="true"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="?attr/app_text_size_normal"
                        app:custom_font="@string/app_font_regular" />


                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_update_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp5"
                        android:text="Click here to update your email address."
                        android:textColor="@color/colorWhite"
                        android:textSize="?attr/app_text_size_small"
                        app:custom_font="@string/app_font_regular" />


                    <com.customviews.TypefaceTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:paddingStart="@dimen/dp5"
                        android:text="Name *"
                        android:textColor="@color/colorWhite"
                        android:textSize="?attr/app_text_size_normal"
                        app:custom_font="@string/app_font_regular" />


                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/et_height"
                        android:layout_marginStart="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginEnd="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:background="@drawable/et_vistion"
                        android:focusableInTouchMode="true"
                        android:hint="Update name"
                        android:paddingStart="@dimen/dp8"
                        android:paddingTop="@dimen/dp10"
                        android:paddingEnd="@dimen/dp8"
                        android:paddingBottom="@dimen/dp10"
                        android:singleLine="true"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="?attr/app_text_size_normal"
                        app:custom_font="@string/app_font_regular" />


                    <com.customviews.TypefaceTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:paddingStart="@dimen/dp5"
                        android:text="Query *"
                        android:textColor="@color/colorWhite"
                        android:textSize="?attr/app_text_size_normal"
                        app:custom_font="@string/app_font_regular" />


                    <Spinner
                        android:id="@+id/sp_query"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/et_height"
                        android:layout_marginStart="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginEnd="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:background="@drawable/et_vistion"
                        android:entries="@array/query_array" />


                    <com.customviews.TypefaceTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:paddingStart="@dimen/dp5"
                        android:text="Message *"
                        android:textColor="@color/colorWhite"
                        android:textSize="?attr/app_text_size_normal"
                        app:custom_font="@string/app_font_regular" />


                    <com.customviews.TypefaceEditText
                        android:id="@+id/et_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginEnd="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:background="@drawable/et_vistion_5radius"
                        android:focusableInTouchMode="true"
                        android:gravity="left|top"
                        android:hint=""
                        android:minHeight="@dimen/dp100"
                        android:paddingStart="@dimen/dp5"
                        android:paddingTop="@dimen/dp10"
                        android:paddingEnd="@dimen/dp5"
                        android:paddingBottom="@dimen/dp10"
                        android:textColor="?attr/et_text_color"
                        android:textColorHint="?attr/et_hint_text_color"
                        android:textSize="?attr/app_text_size_normal"

                        app:custom_font="@string/app_font_regular" />


                    <com.customviews.TypefaceTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:paddingStart="@dimen/dp5"
                        android:text="Human Verification *"
                        android:textColor="@color/colorWhite"
                        android:textSize="?attr/app_text_size_normal"
                        app:custom_font="@string/app_font_regular" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <com.customviews.TypefaceEditText
                            android:id="@+id/et_captcha"
                            android:layout_width="0dp"
                            android:layout_height="?attr/et_height"
                            android:layout_marginStart="@dimen/dp5"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_marginEnd="@dimen/dp5"
                            android:layout_marginBottom="@dimen/dp5"
                            android:layout_weight="1"
                            android:background="@drawable/et_vistion_5radius"
                            android:focusableInTouchMode="true"
                            android:hint=""
                            android:paddingStart="@dimen/dp5"
                            android:paddingTop="@dimen/dp10"
                            android:paddingEnd="@dimen/dp5"
                            android:paddingBottom="@dimen/dp10"
                            android:singleLine="true"
                            android:textColor="?attr/et_text_color"
                            android:textColorHint="?attr/et_hint_text_color"
                            android:textSize="?attr/app_text_size_normal"
                            app:custom_font="@string/app_font_regular" />


                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1" />


                        <test.jinesh.captchaimageviewlib.CaptchaImageView
                            android:id="@+id/iv_captcha"
                            android:layout_width="0dp"
                            android:layout_height="?attr/et_height"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/iv_captcha_refresh"
                            android:layout_width="@dimen/dp25"
                            android:layout_height="@dimen/dp25"
                            android:padding="@dimen/dp2"
                            android:src="@android:drawable/ic_popup_sync"
                            android:tint="@color/colorWhite" />

                    </LinearLayout>

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_submit"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/et_height"
                        android:layout_marginStart="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp20"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_marginBottom="@dimen/dp20"
                        android:background="@drawable/bg_red_5radius"
                        android:gravity="center"
                        android:minWidth="@dimen/dp120"
                        android:text="Submit"
                        android:textColor="@color/btn_color"
                        android:textSize="?attr/btn_text_size"
                        app:custom_font="@string/app_font_regular" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>
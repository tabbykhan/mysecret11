<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="@dimen/dp7"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp5"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/dp5"
        app:cardElevation="@dimen/dp3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:paddingBottom="@dimen/dp10"
                android:background="#EFEFEF">

                <com.customviews.TypefaceTextView
                    android:id="@+id/tv_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="+ 15"
                    android:textColor="?attr/app_text_color"
                    android:textSize="?attr/app_text_size_small"
                    app:custom_font="@string/app_font_bold" />

                <com.customviews.TypefaceTextView
                    android:id="@+id/tv_transaction_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Depositied Cash"
                    android:textColor="?attr/app_text_color"
                    android:textSize="?attr/app_text_size_small"
                    app:custom_font="@string/app_font_regular" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:background="@color/btn_color"
                    android:paddingRight="3dp">
                    <ImageView
                        android:layout_width="@dimen/dp15"
                        android:layout_height="@dimen/dp15"
                        android:background="@drawable/bg_primary_green_oval"
                        android:src="@drawable/info_3x"
                        android:layout_marginLeft="5dp"
                        android:padding="@dimen/dp1"
                        android:tint="@color/colorWhite"
                        />

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Info"
                        android:textColor="@color/colorWhite"
                        android:textSize="?attr/app_text_size_small"
                        app:custom_font="@string/app_font_regular" />
                    <ImageView
                        android:id="@+id/iv_info"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:padding="@dimen/dp2"
                        android:src="@drawable/arrow_down2_3x"
                        android:tint="@color/colorWhite" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_transaction_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f2386716"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp5"
                android:paddingTop="@dimen/dp5"
                android:paddingEnd="@dimen/dp5"
                android:paddingBottom="@dimen/dp5">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.customviews.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Transaction Id : "
                            android:textColor="@color/colorWhite"
                            android:textSize="?attr/app_text_size_extra_small"
                            app:custom_font="@string/app_font_regular" />

                        <com.customviews.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Transaction Date : "
                            android:textColor="@color/colorWhite"
                            android:textSize="?attr/app_text_size_extra_small"
                            app:custom_font="@string/app_font_regular" />

                        <com.customviews.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Team Name : "
                            android:textColor="@color/colorWhite"
                            android:textSize="?attr/app_text_size_extra_small"
                            android:visibility="gone"
                            app:custom_font="@string/app_font_regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.customviews.TypefaceTextView
                            android:id="@+id/tv_transaction_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="123456"
                            android:textColor="@color/colorWhite"
                            android:textSize="?attr/app_text_size_extra_small"
                            app:custom_font="@string/app_font_regular" />

                        <com.customviews.TypefaceTextView
                            android:id="@+id/tv_transaction_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="123"
                            android:textColor="@color/colorWhite"
                            android:textSize="?attr/app_text_size_extra_small"
                            app:custom_font="@string/app_font_regular" />

                        <com.customviews.TypefaceTextView
                            android:id="@+id/tv_transaction_team_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="123"
                            android:textColor="@color/colorWhite"
                            android:textSize="?attr/app_text_size_extra_small"
                            android:visibility="gone"
                            app:custom_font="@string/app_font_regular" />

                    </LinearLayout>

                </LinearLayout>
                <com.customviews.TypefaceTextView
                    android:id="@+id/tv_transaction_team_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="123"
                    android:textColor="@color/colorWhite"
                    android:textSize="?attr/app_text_size_extra_small"
                    app:custom_font="@string/app_font_regular" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>
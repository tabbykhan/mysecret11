<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vision_bg"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_data_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_red_top5radius"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10">

                <com.customviews.TypefaceTextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="INVITE YOUR FRIENDS"
                    android:textAllCaps="true"
                    android:textColor="@color/btn_color"
                    android:textSize="?attr/app_text_size_normal"
                    app:custom_font="@string/app_font_regular" />

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="@dimen/dp25"
                    android:layout_height="@dimen/dp25"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp15"
                    android:padding="@dimen/dp5"
                    android:src="@drawable/close_3x"
                    android:tint="@color/colorWhite" />

            </RelativeLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp5"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/dp5">

            <ImageView
                android:id="@+id/refer_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp120"
                android:src="@drawable/logo_3x" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp5"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/dp10"
            app:cardElevation="@dimen/dp3">

            <include
                android:id="@+id/ll_view"
                layout="@layout/include_match_view" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            app:cardCornerRadius="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            app:cardElevation="@dimen/dp3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10">

                <com.customviews.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp20"
                    android:gravity="center"
                    android:text="SHARE YOUR INVITE CODE"
                    android:textColor="?attr/app_text_color"
                    android:textSize="?attr/app_text_size_extra_small"
                    app:custom_font="@string/app_font_regular" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp50"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_marginEnd="@dimen/dp50"
                    android:background="@drawable/bg_doted_line_gray"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10">

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_refer_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/txt_rferal_code"
                        android:textColor="@color/colorAppBlackAA"
                        android:textSize="?attr/app_text_size_more_normal"
                        app:custom_font="@string/app_font_medium" />

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="COPY CODE"
                        android:textColor="@color/colorAccent"
                        android:textSize="?attr/app_text_size_more_normal"
                        app:custom_font="@string/app_font_regular" />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_whatsapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_weight="1"
                    android:background="@drawable/bg_green_5radius_stroke1gray"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:paddingEnd="@dimen/dp5"
                    android:paddingBottom="@dimen/dp10">

                    <com.customviews.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp20"
                        android:gravity="center"
                        android:text="Invite whatsapp"
                        android:textColor="@color/colorWhite"
                        android:textSize="?attr/app_text_size_big"
                        app:custom_font="@string/app_font_regular" />

                    <ImageView
                        android:id="@+id/iv_whatsapp"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp10"
                        android:padding="@dimen/dp2"
                        android:src="@drawable/whtsp_icon_3x" />

                </LinearLayout>

                <com.customviews.TypefaceTextView
                    android:id="@+id/tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp20"
                    android:gravity="center"
                    android:text="More Option"
                    android:textColor="@color/colorAppBlackAA"
                    android:textSize="?attr/app_text_size_big"
                    app:custom_font="@string/app_font_regular" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


</RelativeLayout>
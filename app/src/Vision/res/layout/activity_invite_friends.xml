<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vision_bg"
    android:clickable="true"
    android:orientation="vertical">

    <include
        android:id="@+id/fragment_toolbar"
        layout="@layout/include_toolbar_fargment" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/refer_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp120"
                android:src="@drawable/logo_3x" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_login_transparent"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginLeft="@dimen/dp15">

            <com.customviews.TypefaceTextView
                android:id="@+id/tv_refer_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="center"
                android:text="Kick off your friend's TheTeam11 journey!"
                android:textColor="@color/colorWhite"
                android:textSize="?attr/app_text_size_big"
                app:custom_font="@string/app_font_medium" />


            <com.customviews.TypefaceTextView
                android:id="@+id/tv_refer_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="center"
                android:text="For every friend that plays, you both get 100 for free!"
                android:textColor="@color/colorWhite"
                android:textSize="?attr/app_text_size_extra_small"
                app:custom_font="@string/app_font_regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@color/vision_green"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:weightSum="2">

                <com.customviews.TypefaceTextView
                    android:id="@+id/tv_how_work"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:padding="@dimen/dp5"
                    android:text="How it Works"
                    android:textColor="@color/colorRed"
                    android:textSize="?attr/app_text_size_normal"
                    app:custom_font="@string/app_font_regular" />

                <View
                    android:layout_width="@dimen/dp1"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlack">

                </View>

                <com.customviews.TypefaceTextView
                    android:id="@+id/tv_rule_of_fairplay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:padding="@dimen/dp5"
                    android:text="Rules of fairPlay"
                    android:textColor="?attr/app_link_text_color"
                    android:textSize="?attr/app_text_size_normal"
                    app:custom_font="@string/app_font_regular" />

            </LinearLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp20"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp10"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">


                    <com.customviews.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp10"
                        android:gravity="center"
                        android:text="SHARE YOUR INVITE CODE"
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_extra_small"
                        app:custom_font="@string/app_font_regular" />

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_refer_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp10"
                        android:gravity="center"
                        android:text="@string/txt_rferal_code"
                        android:textColor="@color/colorBlack"
                        android:textSize="?attr/app_text_size_big"
                        app:custom_font="@string/app_font_medium" />

                    <com.customviews.TypefaceTextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp20"
                        android:gravity="center"
                        android:text="Invite Via"
                        android:textColor="?attr/app_link_text_color"
                        android:textSize="?attr/app_text_size_normal"
                        app:custom_font="@string/app_font_regular" />

                    <LinearLayout
                        android:id="@+id/ll_whatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@drawable/btn_login">

                        <ImageView
                            android:id="@+id/iv_whatsapp"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:padding="@dimen/dp5"
                            android:layout_marginLeft="@dimen/dp20"
                            android:src="@drawable/whtsp_icon_3x" />
                        <com.customviews.TypefaceTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Invite Via whatsapp"
                            android:textColor="@color/btn_color"
                            android:textSize="?attr/app_text_size_normal"
                            app:custom_font="@string/app_font_regular" />

                    </LinearLayout>
                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp20"
                        android:gravity="center"
                        android:text="More Option"
                        android:textColor="@color/vision_green"
                        android:textSize="?attr/app_text_size_big"
                        app:custom_font="@string/app_font_bold" />

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginBottom="@dimen/dp10"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/iv_message"
                                android:layout_width="@dimen/dp40"
                                android:layout_height="@dimen/dp40"
                                android:padding="@dimen/dp5"
                                android:src="@drawable/mail_icon_3x" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center">

                            <!--<ImageView
                                android:id="@+id/iv_whatsapp"
                                android:layout_width="@dimen/dp40"
                                android:layout_height="@dimen/dp40"
                                android:padding="@dimen/dp5"
                                android:src="@drawable/whtsp_icon_3x" />-->

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/iv_facebook"
                                android:layout_width="@dimen/dp40"
                                android:layout_height="@dimen/dp40"
                                android:padding="@dimen/dp5"
                                android:src="@drawable/facebook_3x" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/iv_more"
                                android:layout_width="@dimen/dp40"
                                android:layout_height="@dimen/dp40"
                                android:padding="@dimen/dp5"
                                android:src="@drawable/icon_share" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_my_teams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp20"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.customviews.TypefaceTextView
                            android:id="@+id/tv_total_joined_friends"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1 Friends joined!"
                            android:textColor="@color/colorAppBlack"
                            android:textSize="?attr/app_text_size_normal"
                            app:custom_font="?attr/app_font_medium" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.customviews.TypefaceTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cash Bonus to be earned:"
                                android:textColor="?attr/app_text_color_sec"
                                android:textSize="?attr/app_text_size_small"
                                app:custom_font="?attr/app_font_regular" />

                            <com.customviews.TypefaceTextView
                                android:id="@+id/tv_total_bonus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp5"
                                android:background="@color/colorScreenBg"
                                android:paddingStart="@dimen/dp5"
                                android:paddingEnd="@dimen/dp5"

                                android:text="100"
                                android:textColor="?attr/app_text_color"
                                android:textSize="?attr/app_text_size_small"
                                app:custom_font="?attr/app_font_regular" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/dp10"
                        android:layout_height="@dimen/dp10"
                        android:src="@drawable/right_arrow_3x"
                        android:tint="@color/colorAppBlack" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <ProgressBar
        android:id="@+id/pb_data"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_centerInParent="true" />

</RelativeLayout>
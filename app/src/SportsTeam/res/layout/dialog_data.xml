<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:background="@drawable/bg_white_top5radius">


        <com.customviews.TypefaceTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="?attr/btn_height"
            android:background="@drawable/bg_primary_top5radius"
            android:gravity="center"
            android:text="TITLE"
            android:textColor="?attr/btn_text_color"
            android:textSize="?attr/app_text_size_big"
            app:custom_font="?attr/app_font_regular" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title" />
    </RelativeLayout>
</RelativeLayout>
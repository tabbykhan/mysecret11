<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgforall"
    android:clickable="true"
    android:orientation="vertical">

    <include
        android:id="@+id/fragment_toolbar"
        layout="@layout/include_toolbar_fargment" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <include
                layout="@layout/include_profile_view"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_transparent"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="480dp"
                        android:background="@drawable/loginscreenbg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_marginBottom="@dimen/dp10"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/colorWhite"
                            app:cardCornerRadius="@dimen/dp10"
                            app:cardUseCompatPadding="true">

                            <ImageView
                                android:layout_width="@dimen/dp200"
                                android:layout_height="@dimen/dp150"
                                android:layout_gravity="center"
                                android:padding="@dimen/dp12"
                                android:src="@drawable/logo_3x" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp5"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="Change password"
                            android:textAllCaps="true"
                            android:textSize="@dimen/sp24"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:theme="@style/TextInputTheme">

                            <com.customviews.TypefaceEditText
                                android:id="@+id/et_old_password"
                                android:layout_width="match_parent"
                                android:layout_height="?attr/et_height"
                                android:background="?attr/et_bg_drawable"
                                android:drawableStart="@drawable/ic_lock_black_24dp"
                                android:padding="@dimen/dp5"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="Old Password"
                                android:imeOptions="actionNext"
                                android:inputType="textPassword"
                                android:lines="1"
                                android:maxLength="50"
                                android:textColor="?attr/et_text_color"
                                android:textColorHint="?attr/et_hint_text_color"
                                android:textSize="?attr/et_text_size"
                                app:custom_font="@string/app_font_regular" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="@dimen/dp15"
                            android:layout_marginEnd="16dp"
                            android:theme="@style/TextInputTheme">

                            <com.customviews.TypefaceEditText
                                android:id="@+id/et_new_password"
                                android:layout_width="match_parent"
                                android:layout_height="?attr/et_height"
                                android:background="?attr/et_bg_drawable"
                                android:ems="10"
                                android:drawableStart="@drawable/ic_lock_black_24dp"
                                android:padding="@dimen/dp5"
                                android:gravity="center"
                                android:hint="New Password"
                                android:imeOptions="actionNext"
                                android:inputType="textPassword"
                                android:lines="1"
                                android:maxLength="50"
                                android:textColor="?attr/et_text_color"
                                android:textColorHint="?attr/et_hint_text_color"
                                android:textSize="?attr/et_text_size"
                                app:custom_font="@string/app_font_regular" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="@dimen/dp15"
                            android:layout_marginEnd="16dp"
                            android:theme="@style/TextInputTheme">


                            <com.customviews.TypefaceEditText
                                android:id="@+id/et_confirm_password"
                                android:layout_width="match_parent"
                                android:layout_height="?attr/et_height"
                                android:background="?attr/et_bg_drawable"
                                android:drawableStart="@drawable/ic_lock_black_24dp"
                                android:padding="@dimen/dp5"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="Confirm Password"
                                android:imeOptions="actionNext"

                                android:inputType="textPassword"
                                android:lines="1"
                                android:maxLength="50"
                                android:textColor="?attr/et_text_color"
                                android:textColorHint="?attr/et_hint_text_color"
                                android:textSize="?attr/et_text_size"
                                app:custom_font="@string/app_font_regular" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp20"
                            android:layout_marginBottom="@dimen/dp10"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <com.customviews.TypefaceTextView
                                android:id="@+id/tv_update"
                                android:layout_width="0dp"
                                android:layout_height="?attr/btn_height"
                                android:layout_weight="0.5"
                                android:background="@drawable/btn_login"
                                android:gravity="center"
                                android:paddingBottom="@dimen/dp4"
                                android:text="UPDATE"
                                android:textColor="?attr/btn_text_color"
                                android:textSize="?attr/btn_text_size"
                                app:custom_font="@string/app_font_regular" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>
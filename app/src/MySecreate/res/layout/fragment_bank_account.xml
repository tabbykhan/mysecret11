<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#012241">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@drawable/bg_transparent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_data_pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp20"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp10">

                        <ImageView
                            android:layout_width="@dimen/dp25"
                            android:layout_height="@dimen/dp25"
                            android:layout_marginStart="@dimen/dp10"
                            android:src="@drawable/icon_bank"
                            android:tint="@color/colorAppBlack" />

                        <com.customviews.TypefaceTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginEnd="@dimen/dp10"
                            android:layout_weight="1"
                            android:text="VERIFY BANK ACCOUNT"
                            android:textColor="?attr/app_text_color"
                            android:textSize="?attr/app_text_size_normal"
                            app:custom_font="?attr/app_font_medium" />
                    </LinearLayout>

                    <com.customviews.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp45"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:text="(verify your bank account to withdraw winnings)"
                        android:textColor="?attr/app_text_color_sec"
                        android:textSize="?attr/app_text_size_extra_small"
                        app:custom_font="@string/app_font_regular" />

                    <LinearLayout
                        android:id="@+id/ll_verify_step"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp20"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp20"
                            android:layout_marginEnd="@dimen/dp20"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/dp10">

                            <ImageView
                                android:layout_width="@dimen/dp25"
                                android:layout_height="@dimen/dp25"
                                android:src="@drawable/warning"
                                android:tint="@color/colorRed" />

                            <com.customviews.TypefaceTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp10"
                                android:layout_weight="1"
                                android:text="To transfer winnings to your bank account, please complete the steps mentioned below."
                                android:textColor="@color/colorAppBlack"
                                android:textSize="?attr/app_text_size_small"
                                app:custom_font="?attr/app_font_regular" />
                        </LinearLayout>


                        <com.customviews.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp55"
                            android:layout_marginTop="@dimen/dp10"
                            android:text="-  Verify your mobile number"
                            android:textColor="?attr/app_text_color"
                            android:textSize="?attr/app_text_size_small"
                            app:custom_font="?attr/app_font_regular" />

                        <com.customviews.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp55"
                            android:layout_marginTop="@dimen/dp10"
                            android:text="-  Verify your email address"
                            android:textColor="?attr/app_text_color"
                            android:textSize="?attr/app_text_size_small"
                            app:custom_font="?attr/app_font_regular" />

                        <com.customviews.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp55"
                            android:layout_marginTop="@dimen/dp10"
                            android:text="-  Verify your PAN card"
                            android:textColor="?attr/app_text_color"
                            android:textSize="?attr/app_text_size_small"
                            app:custom_font="?attr/app_font_regular" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_bank_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp30"
                android:layout_marginTop="@dimen/dp20"
                app:cardBackgroundColor="@color/colorActivateGreen"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp1"
                    android:background="#012241"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp10">

                        <ImageView
                            android:layout_width="@dimen/dp25"
                            android:layout_height="@dimen/dp25"
                            android:layout_marginStart="@dimen/dp10"
                            android:src="@drawable/icon_bank"
                            android:tint="@color/colorAppBlack" />

                        <com.customviews.TypefaceTextView
                            android:id="@+id/tv_verify_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:layout_marginEnd="@dimen/dp10"
                            android:layout_weight="1"
                            android:text="VERIFY BANK ACCOUNT"
                            android:textColor="?attr/app_text_color"
                            android:textSize="?attr/app_text_size_normal"
                            app:custom_font="?attr/app_font_medium" />
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_marginBottom="@dimen/dp5"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="@dimen/dp5"
                        app:cardElevation="@dimen/dp3">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_bank_proof"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp120"
                                android:src="@drawable/icon_bank" />

                            <com.customviews.TypefaceTextView
                                android:id="@+id/tv_upload_account_proof"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp35"
                                android:layout_alignBottom="@+id/iv_bank_proof"
                                android:background="@color/colorAppBlackAA"
                                android:gravity="center"
                                android:text="UPLOAD ACCOUNT PROOF"
                                android:textColor="@color/colorWhite"
                                android:textSize="?attr/app_text_size_normal"
                                app:custom_font="@string/app_font_regular" />

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginEnd="@dimen/dp10"
                        android:gravity="center"
                        android:text=""
                        android:textColor="?attr/app_text_color_sec"
                        android:textSize="?attr/app_text_size_extra_small"
                        app:custom_font="?attr/app_font_regular" />

                    <com.customviews.TypefaceTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp15"
                        android:layout_marginEnd="@dimen/dp10"
                        android:text="Account number (Bank account number)"
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_normal"
                        app:custom_font="@string/app_font_regular" />


                    <com.customviews.TypefaceEditText
                        android:id="@+id/et_bank_account_number"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp35"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginEnd="@dimen/dp10"
                        android:background="?attr/et_bg_drawable"
                        android:digits="0123456789"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint=""
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="18"
                        android:paddingStart="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:textColor="?attr/et_text_color"
                        android:textColorHint="?attr/et_hint_text_color"
                        android:textSize="?attr/et_text_size"
                        app:custom_font="@string/app_font_regular" />

                    <com.customviews.TypefaceTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp15"
                        android:layout_marginEnd="@dimen/dp10"
                        android:text="Retype account number"
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_normal"
                        app:custom_font="@string/app_font_regular" />


                    <com.customviews.TypefaceEditText
                        android:id="@+id/et_re_bank_account_number"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp35"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginEnd="@dimen/dp10"
                        android:background="?attr/et_bg_drawable"
                        android:digits="0123456789"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint=""
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="18"
                        android:paddingStart="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:textColor="?attr/et_text_color"
                        android:textColorHint="?attr/et_hint_text_color"
                        android:textSize="?attr/et_text_size"
                        app:custom_font="@string/app_font_regular" />

                    <com.customviews.TypefaceTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp15"
                        android:layout_marginEnd="@dimen/dp10"
                        android:text="Account holder name"
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_normal"
                        app:custom_font="@string/app_font_regular" />


                    <com.customviews.TypefaceEditText
                        android:id="@+id/et_bank_ac_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp35"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginEnd="@dimen/dp10"
                        android:background="?attr/et_bg_drawable"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint=""
                        android:imeOptions="actionNext"
                        android:inputType="text|textCapWords"
                        android:lines="1"
                        android:maxLength="50"
                        android:paddingStart="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:textColor="?attr/et_text_color"
                        android:textColorHint="?attr/et_hint_text_color"
                        android:textSize="?attr/et_text_size"
                        app:custom_font="@string/app_font_regular" />

                    <com.customviews.TypefaceTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp15"
                        android:layout_marginEnd="@dimen/dp10"
                        android:text="IFSC Code"
                        android:textColor="?attr/app_text_color"
                        android:textSize="?attr/app_text_size_normal"
                        app:custom_font="@string/app_font_regular" />


                    <com.customviews.TypefaceEditText
                        android:id="@+id/et_ifsc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp35"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_marginBottom="@dimen/dp20"
                        android:background="?attr/et_bg_drawable"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint=""
                        android:imeOptions="actionNext"
                        android:inputType="text|textCapCharacters"
                        android:lines="1"
                        android:maxLength="11"
                        android:paddingStart="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:textColor="?attr/et_text_color"
                        android:textColorHint="?attr/et_hint_text_color"
                        android:textSize="?attr/et_text_size"
                        app:custom_font="@string/app_font_regular" />


                    <com.customviews.TypefaceTextView
                        android:id="@+id/tv_proceed"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/btn_height"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_marginBottom="@dimen/dp20"
                        android:background="@drawable/bg_red_5radius"
                        android:paddingBottom="@dimen/dp4"
                        android:gravity="center"
                        android:text="SUBMIT FOR VERIFICATION"
                        android:textColor="?attr/btn_text_color"
                        android:textSize="?attr/btn_text_size"
                        app:custom_font="@string/app_font_regular" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="75dp" >

    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp50"
        android:gravity="center"
        android:padding="@dimen/dp5"
        android:background="@drawable/create_team_tab_bg_selector_soccer"
       android:layout_gravity="center"
        android:orientation="vertical">

        <com.customviews.TintImageView
            android:id="@+id/iv_sport_type"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:src="@mipmap/ic_launcher"/>

    </LinearLayout>

    <com.customviews.TypefaceTextView
        android:id="@+id/tv_sport_type"
        android:layout_width="wrap_content"
       android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp3"
        android:singleLine="true"
        android:text="Cricket"
       android:layout_alignBottom="@id/ll_tab"
        android:textColor="@color/sport_tab_textcolor_selector"
        android:textSize="@dimen/sp14"
        app:custom_font="?attr/app_font_medium" />
</LinearLayout>
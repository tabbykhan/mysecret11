<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSizeSmall"
        android:gravity="center"
        android:orientation="horizontal">

        <com.customviews.TintImageView
            android:id="@+id/iv_sport_type"
            android:layout_width="@dimen/dp17"
            android:layout_height="@dimen/dp17"
            android:src="@mipmap/ic_launcher"
            app:tintColorStateList="@color/sport_tab_textcolor_selector"/>

        <com.customviews.TypefaceTextView
            android:id="@+id/tv_sport_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp3"
            android:singleLine="true"
            android:text="Cricket"
            android:textColor="@color/sport_tab_textcolor_selector"
            android:textSize="@dimen/sp14"
            app:custom_font="?attr/app_font_medium" />
    </LinearLayout>
</RelativeLayout>
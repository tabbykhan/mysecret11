<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002341"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_tollbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        >

        <RelativeLayout
            android:id="@+id/rl_bg_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bg_header"
            >


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="?attr/actionBarIconSize"
                android:layout_height="?attr/actionBarIconSize"
                android:layout_centerVertical="true"
                android:onClick="backBtn"
                android:padding="@dimen/dp12"
                android:src="@drawable/back_icon_3x"
                android:tint="@color/btn_color"
                />

            <com.customviews.TypefaceTextView
                android:id="@+id/tv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_back"
                android:ellipsize="end"
                android:lines="1"
                android:text="Contest Filter"
                android:textAllCaps="true"
                android:textColor="@color/btn_color"
                android:textSize="?attr/actionBarTitleSize"
                app:custom_font="@string/app_font_regular"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp50"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp10"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entry"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp18"
                ></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:orientation="horizontal"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="₹1 - ₹50"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="₹51 - ₹100"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp10"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="₹101 - ₹100"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="₹1001 &amp; above"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Teams"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp18"
                ></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:orientation="horizontal"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="2"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="3 - 10"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp10"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="11 - 100"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="101 - 1000"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp10"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="1001 &amp; above"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prize Pool"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp18"
                ></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:orientation="horizontal"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="₹1 - ₹10,000"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="₹10,000 - ₹1 Lakh"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp10"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="₹1 Lakh - ₹10 Lakh"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="₹10 Lakh - ₹25 Lakh"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp10"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="₹25 Lakh - above"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contest Type"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp18"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:orientation="horizontal"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="Single Entry"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="Multi Entry"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp10"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="Single Winner"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="Multi Winner"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp10"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/selector_player_choose"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:text="Confirmed"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp15"
                    />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_bottom_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:id="@+id/ll_new_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorRed"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10"
            android:weightSum="1"
            >

            <com.customviews.TypefaceTextView
                android:id="@+id/filter_apply"
                android:layout_width="208dp"
                android:layout_height="34dp"
                android:layout_weight="0.5"
                android:background="@drawable/bg_btn_rounded_orange"
                android:gravity="center"
                android:text="Apply"
                android:textColor="@color/colorWhite"
                android:textSize="?attr/btn_text_size"
                app:custom_font="@string/app_font_regular"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
